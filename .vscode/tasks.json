{
  "tasks": [
    {
      "label": "Run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "exec ${config:buildFolder}/mir",
      "dependsOn": [ "Build (mir)" ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Execution",
      }
    },
    {
      "label": "Test (all)",
      "group": "test",
      "type": "shell",
      "command": "exec ${config:buildFolder}/test",
      "dependsOn": [ "Build (test)" ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "group": "Execution"
      }
    },
    {
      "label": "Test",
      "group":{
        "kind": "test",
        "isDefault": true
      },
      "type": "shell",
      "command": "exec ${config:buildFolder}/test -ts=\"${input:testSuite}\" -tc=\"${input:filters}\"",
      "dependsOn": [ "Build (test)" ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "group": "Execution"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      }
    },
    {
      "label": "Build (mir)",
      "group": "build",
      "type": "shell",
      "command": "cd ${config:buildFolder}; make mir -j ${config:makeJobsCount}",
      "problemMatcher": [ "$gcc" ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "Build (test)",
      "group": "build",
      "type": "shell",
      "command": "cd ${config:buildFolder}; make test -j ${config:makeJobsCount}",
      "problemMatcher": [ "$gcc" ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "CMake (gcc)",
      "group": "build",
      "type": "shell",
      "command": "CC=gcc-11 CXX=g++-11 cmake -S ${workspaceFolder} -B ${config:buildFolder}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "CMake (clang)",
      "group": "build",
      "type": "shell",
      "command": "CC=clang-12 CXX=clang++-12 cmake -S ${workspaceFolder} -B ${config:buildFolder}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "Clean",
      "group": "build",
      "type": "shell",
      "command": "rm -rf ${config:buildFolder}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "Valgrind (memcheck)",
      "group": "test",
      "type": "shell",
      "command": "valgrind",
      "args": [
        "--tool=memcheck",
        "--leak-check=full",
        "--show-reachable=yes",
        "--track-origins=yes",
        "--error-exitcode=1",
        "${config:buildFolder}/mir"
      ],
      "dependsOn": [ "Build (mir)" ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Execution"
      }
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "filters",
      "default": "*",
      "description": "Filters used to select which tests to run"
    },
    {
      "type": "pickString",
      "id": "testSuite",
      "options": [
        "Tokenizer",
        "Parser"
      ],
      "description": "Test suite to run"
    }
  ],
  "version": "2.0.0"
}
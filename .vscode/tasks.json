{
  "tasks": [
    {
      "label": "Run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "exec ${workspaceFolder}/build/mir",
      "dependsOn": [ "Build (mir)" ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Execution",
      }
    },
    {
      "label": "Test",
      "group":{
        "kind": "test",
        "isDefault": true
      },
      "type": "shell",
      "command": "exec ${workspaceFolder}/build/test",
      "dependsOn": [ "Build (test)" ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "group": "Execution"
      }
    },
    {
      "label": "Build (mir)",
      "group": "build",
      "type": "shell",
      "command": "cd ${workspaceFolder}/build; make mir -j 4",
      "problemMatcher": [ "$gcc" ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "Build (test)",
      "group": "build",
      "type": "shell",
      "command": "cd ${workspaceFolder}/build; make test -j 4",
      "problemMatcher": [ "$gcc" ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "CMake (gcc)",
      "group": "build",
      "type": "shell",
      "command": "CC=gcc-11 CXX=g++-11 cmake -S ${workspaceFolder} -B ${workspaceFolder}/build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "CMake (clang)",
      "group": "build",
      "type": "shell",
      "command": "CC=clang-12 CXX=clang++-12 cmake -S ${workspaceFolder} -B ${workspaceFolder}/build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "Clean",
      "group": "build",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/build/",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Build"
      }
    },
    {
      "label": "Valgrind (memcheck)",
      "group": "test",
      "type": "shell",
      "command": "valgrind",
      "args": [
        "--tool=memcheck",
        "--leak-check=full",
        "--show-reachable=yes",
        "--track-origins=yes",
        "--error-exitcode=1",
        "${workspaceFolder}/build/mir"
      ],
      "dependsOn": [ "Build (mir)" ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "Execution"
      }
    }
  ],
  "version": "2.0.0"
}